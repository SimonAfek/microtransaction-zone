<div class="search-xl">
    <form class="searchbar-xl" action="@Url.Action("Search", "Search")">
        <input class="form-control form-control-lg col-sm-12" type="text" name="q" placeholder="Search All Games">
        <button class="btn btn-outline-primary col-sm-2" type="submit">Search</button>
        <button class="btn btn-outline-secondary col-sm-3" type="submit">Advanced Search</button>
    </form>
</div>

<div class="row">
    <h1>Recently rated games</h1>
</div>

<div class="row">
    @foreach (var v in GameHelpers.GetRecentlyRatedGames(3))
    {
        <div class="col-md-4" style="border: 1px; border-style: dotted;">
            @Html.Partial("Mini", v)
        </div>
    }
</div>
