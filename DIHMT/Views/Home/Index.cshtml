@using DIHMT.Static

@{
    ViewBag.Title = "MICROTRANSACTION.ZONE";
}

<div class="container">
    <div class="row">
        <div class="col-lg-9 col-md-12">

            <div class="search-xl">
                <form class="searchbar-xl col.12" action="@Url.Action("Search", "Search")">
                    <input class="form-control form-control-lg col-sm-12" type="text" name="q" placeholder="Search All Games">
                    <button class="btn btn-primary col-md-2" type="submit">Search</button>
                    <button class="btn btn-secondary col-md-3" type="submit">Advanced Search</button>
                </form>
            </div>

