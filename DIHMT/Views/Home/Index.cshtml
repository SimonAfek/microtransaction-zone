@using DIHMT.Static

@{
    ViewBag.Title = "MICROTRANSACTION.ZONE";
}

<div class="page-title" id="page-title">Recently rated games <a href="@Url.Action("Recent", "Search")" class="indigo">(Click here for more)</a></div>
<div class="column no-gutters">
    @foreach (var v in GameHelpers.GetRecentlyRatedGames(3))
    {
        <div class="list-item clearfix">
            @Html.Partial("Mini", v)
        </div>
    }
</div>
        