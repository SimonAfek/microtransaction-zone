            <ul class="navbar-nav">

                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>

                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>

                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>

            </ul>

            <!-- MZ search -->
            <form class="d-inline" action="@Url.Action("Search", "Search")">
                <input class="form-control mr-sm-2" type="text" name="q" placeholder="Search All Games">
                <!-- creates 2 lines when hitting lg or smaller: <button class="btn btn-outline-primary my-2 my-sm-0 navbar-expand-xl" type="submit">Search</button> -->
            </form>

        </div>
    </div>
