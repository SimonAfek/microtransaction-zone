@using DIHMT.Models
@using DIHMT.Static
@model TabRequestView

@{
    Layout = null;
    var ratings = GameHelpers.GetRatings();
}

@helper RatingLamp(DbRating v)
{
    <div class="form-check">
        <input type="checkbox" name="@($"TagSets[{Model.Index}].Tags")" value="@v.Id" id="@($"tagsets-{v.Id}-{Model.Index}")" class="submission-checkbox" />
        <label for="@($"tagsets-{v.Id}-{Model.Index}")">
            <img class="game-flag-img" src="@v.ImageUrl" />
        </label>
        <div class="game-flag-box">
            <label for="@($"tagsets-{v.Id}-{Model.Index}")" class="game-flag-description">
                <strong class="flag-name">@v.Name</strong>
                <br />
                @v.ShortDescription
            </label>
        </div>
    </div>
}

<div id="@($"tabs-{Model.TabIndex}")">
    <div class="form-group row no-gutters">
        @foreach (var v in Model.Platforms)
        {
            <div class="form-check">
                <label>
                    <input type="checkbox" name="@($"TagSets[{Model.Index}].Platforms")" value="@v.Id" id="@($"platforms-{v.Id}-{Model.Index}")" /> @v.Name
                </label>
            </div>
        }
    </div>
    <div class="form-group row no-gutters">
        @foreach (var v in ratings)
        {
            @RatingLamp(v)
        }
    </div>
</div>
